<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.chums">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashActivity" android:noHistory="true" android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.note_details.NoteDetailsActivity"
            android:parentActivityName=".ui.main_activity.MainActivity" />
        <activity
            android:name=".ui.add_note.AddNoteActivity"
            android:parentActivityName=".ui.main_activity.MainActivity" />
        <activity
            android:name=".ui.main_activity.MainActivity"
            android:theme="@style/AnotherTheme">

        </activity>
    </application>

</manifest>